<!DOCTYPE html>
<html lang="en">
  <%- include('head'); %>
  <body>
    <%- include('nav'); %>
    <div class="container">
      <h1 class="mt-3 mb-3">Your Profile</h1>

      <h3 class="mt-3 mb-3">Your Public Posts</h3>

      <% if(posts.length == 0){ %>
      <p>Nothing to see here ;)</p>
      <% } else { %> <% for (var i = 0; i < posts.length; i++) { %>
      <div class="card mt-3">
        <h5 class="card-header">
          <%= mainUser.firstName %> <%= mainUser.lastName %>
        </h5>
        <div class="card-body">
          <p class="card-text"><%= posts[i].post %></p>
          <form class="d-inline" method="POST" action="/deletePublicPost">
            <button
              type="submit"
              class="btn btn-danger"
              name="postId"
              value="<%= mainUser.publicPosts[i]._id %>"
            >
              Delete Post
            </button>
          </form>
        </div>
      </div>
      <% } %> <% } %>

      <h3 class="mt-5 mb-3">Your Private Posts</h3>

      <% if(privatePosts.length == 0){ %>
      <p>Nothing to see here ;)</p>
      <% } else { %> <% for (var i = 0; i < privatePosts.length; i++) { %>
      <div class="card mt-3">
        <h5 class="card-header">
          <%= mainUser.firstName %> <%= mainUser.lastName %>
        </h5>
        <div class="card-body">
          <p class="card-text"><%= privatePosts[i].post %></p>
          <form class="d-inline" method="POST" action="/deletePrivatePost">
            <button
              type="submit"
              class="btn btn-danger"
              name="postId"
              value="<%= mainUser.privatePosts[i]._id %>"
            >
              Delete Post
            </button>
          </form>
        </div>
      </div>
      <% } %> <% } %>
    </div>
    <%- include('footer'); %>
  </body>
</html>
