<!DOCTYPE html>
<html lang="en">
  <%- include('head'); %>
  <body>
    <%- include('nav'); %>
    <div class="container">
      <h1 class="mt-3 mb-3">Settings</h1>

      <div class="border border-primary p-4">
        <h5 class="text-primary">Personal Information</h5>
        <form action="/saveSettings" method="post">
          <div class="mt-3 mb-3">
            <p class="d-inline">First Name:</p>
            <input
              class="form-control w-25"
              type="text"
              name="firstName"
              id="firstName"
              value="<%= firstName %>"
              onfocus="showSave()"
              onblur="hideSave()"
            />
          </div>
          <div class="mt-3 mb-3">
            <p class="d-inline">Last Name:</p>
            <input
              class="form-control w-25"
              type="text"
              name="lastName"
              id="lastName"
              value="<%= lastName %>"
              onfocus="showSave()"
              onblur="hideSave()"
            />
          </div>
          <div class="mt-3 mb-3">
            <p class="d-inline">Email:</p>
            <input
              class="form-control w-25"
              type="text"
              name="email"
              id="email"
              value="<%= email %>"
              readonly
            />
          </div>
          <div class="mt-3 mb-3">
            <p class="d-inline">Password:</p>
            <input
              class="form-control w-25"
              type="text"
              name="email"
              id="email"
              value="***********"
              readonly
            />
          </div>
          <!-- Button trigger modal -->
          <button
            type="button"
            class="btn btn-danger"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
          >
            Change Password
          </button>

          <!-- Button trigger modal -->
          <button
            type="button"
            class="btn btn-danger"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal1"
          >
            Delete Account
          </button>

          <div class="text-right d-none mt-3" id="saveButtonDiv">
            <button class="btn btn-primary" type="submit">Save</button>
          </div>
          <p class="mt-3"><%=message%></p>
        </form>
        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal1"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title text-danger" id="exampleModalLabel">
                  Delete Account
                </h5>
                <h6 class="modal-title text-muted">
                  <span> (This can't be undone)</span>
                </h6>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <form action="/deleteAccount" method="post">
                <div class="modal-body">
                  <div class="form-group">
                    <label for="exampleInputPassword3">Password:</label>
                    <input
                      type="password"
                      class="form-control mb-3"
                      id="exampleInputPassword3"
                      placeholder="Password"
                      name="currentPassword"
                      required
                    />
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <button type="submit" class="btn btn-danger">
                    Delete Account
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title text-danger" id="exampleModalLabel">
                  Change Password
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <form action="/changePassword" method="post">
                <div class="modal-body">
                  <div class="form-group">
                    <label for="exampleInputPassword3">Current Password</label>
                    <input
                      type="password"
                      class="form-control mb-3"
                      id="exampleInputPassword3"
                      placeholder="Password"
                      name="currentPassword"
                      required
                    />
                  </div>

                  <div class="form-group">
                    <label for="exampleInputPassword3">New Password</label>
                    <input
                      type="password"
                      class="form-control mb-3"
                      id="exampleInputPassword3"
                      placeholder="Password"
                      name="newPassword"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword2"
                      >Re-enter New Password</label
                    >
                    <input
                      type="password"
                      class="form-control mb-3"
                      id="exampleInputPassword2"
                      placeholder="Password"
                      name="reNewPassword"
                      required
                    />
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <button type="submit" class="btn btn-danger">
                    Change Password
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('footer'); %>
  </body>
</html>
